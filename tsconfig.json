{
  "compilerOptions": {
    "baseUrl": "./src/",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "noImplicitReturns": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": ["src"]
}
